<section class="ftco-section img js-fullheight"
	style="background-image: url(/images/bg.jpg); background-image: linear-gradient(to right, #434343 0%, black 100%);">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<h2 class="heading-section" style="color:white">Admin Login</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">
					<h3 class="mb-4 text-center" style="color:white;">Have an account?</h3>
					<form action="/admin/login" class="signin-form" method="post">
						<div class="form-group">
							<input type="text" class="form-control" name="email" placeholder="Email">
							{{#if emailErr}}
							<label class="text-danger ml-3">{{emailErr}}</label>
							{{/if}}
						</div>
						<div class="form-group">
							<input id="password-field" type="password" class="form-control" name="password"
								placeholder="Password">
							<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							{{#if passErr}}
							<label class="text-danger ml-3">{{passErr}}</label>
							{{/if}}
						</div>
						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>